<configuration>
 <contextName>Proline Admin</contextName>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
       <pattern>%-5level: [%thread] %date{dd MMM - HH:mm:ss} %logger{0} - %msg%n</pattern>
    </encoder>
  </appender>

 <appender name="Fappender" class="ch.qos.logback.core.FileAppender">
   <file>proline_admin_log.txt</file>
   <append>true</append>
   <encoder>
     <pattern>%-5level: [%thread] %date{dd MMM - HH:mm:ss} %logger{0} - %msg%n</pattern>
   </encoder>
  </appender>

  <logger name="fr.proline.admin" level="INFO">
    <appender-ref ref="Fappender" />
  </logger>

  <root level="WARN">
      <appender-ref ref="STDOUT" />
  </root>

</configuration>
