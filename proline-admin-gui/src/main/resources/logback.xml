<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <contextName>Proline Admin GUI</contextName>

  <!-- Print "error" log messages in the console -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>INFO</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>  

    <encoder>
      TTCCLayout
      <pattern>%date{dd MMM yyyy HH:mm:ss.SSS} [%thread] %-5level
        %logger{35} - %msg%n</pattern>
    </encoder>

  </appender>


  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>proline_admin_gui_log.txt</file>
    <append>true</append>

    <encoder>
      <!-- TTCCLayout -->
      <pattern>%date{dd MMM yyyy HH:mm:ss.SSS} [%thread] %-5level
        %logger{35} - %msg%n</pattern>
    </encoder>

  </appender>

  <logger name="fr.profi" level="DEBUG" />

  <logger name="fr.proline" level="DEBUG" />

  <root level="WARN">
    <appender-ref ref="STDOUT" /> <!-- Print "INFO" log messages in the console -->
    <appender-ref ref="FILE" />   <!-- Print ALL log messages into log file -->
  </root>

</configuration>
